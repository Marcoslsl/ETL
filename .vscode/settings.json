{
    "files.exclude": {
        "**/*.pyc*": {"when": "$(basename).py"},
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": ["--ignore=D100", "--ignore=D104"],
    "python.linting.pycodestyleEnabled": true
}